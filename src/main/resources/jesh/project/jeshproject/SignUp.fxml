<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<VBox fx:id="mainBox" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jesh.project.jeshproject.controller.SignupPage">
    <VBox fx:id="SignupBox">
        <VBox fx:id="signupTitle">
        <Text fx:id="title">
            <font>
                <Font name="Arial Black" size="36.0" />
            </font>
        </Text>
        </VBox>
        <HBox fx:id="fieldsBox">
            <VBox fx:id="leftFields">
                <TextField fx:id="firstNameField" promptText="First Name"/>
                <Label fx:id="firstNameErrorLabel"/>
                <TextField fx:id="usernameField" promptText="Username"/>
                <Label fx:id="usernameErrorLabel"/>
            </VBox>
            <VBox fx:id="rightFields">
                <TextField fx:id="lastNameField" promptText="Last Name"/>
                <Label fx:id="lastNameErrorLabel"/>
                <TextField fx:id="birthdayField" promptText="Birthday"/>
                <Label fx:id="birthdayErrorLabel"/>
            </VBox>
        </HBox>

        <TextField fx:id="emailField" promptText="Email"/>
        <Label fx:id="emailErrorLabel"/>
        <TextField fx:id="passwordField" promptText="Password"/>
        <Label fx:id="passwordErrorLabel"/>

        <HBox fx:id="buttonBox">
            <Button fx:id="signupButton" text="Sign Up" onAction="#signup"/>
            <Button fx:id="goBackButton" onAction="#goBacktoHome" text="Go Back"/>
        </HBox>

        <HBox fx:id="login">
            <Text fx:id="LoginLink">Dont have an account?</Text>
            <Button fx:id="loginLink" onAction="#goToLoginPage" text="Login"/>
        </HBox>

    </VBox>
</VBox>