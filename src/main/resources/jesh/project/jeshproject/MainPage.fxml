<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<?xml-stylesheet type="text/css" href="MainPage.css"?>

    <VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller= "jesh.project.jeshproject.brightness.BrightnessManager"
          style="-fx-padding: 10;" fx:id="mainbox">


        <!-- TOP PART -->
        <!-- TimeLine Name HBox -->
    <!-- "SleepWell" HBox -->
    <HBox fx:id="logo">
        <TextField fx:id="sleepwell_logo" text="SleepWell" editable="false"
                   style="-fx-alignment: center;"/> <!-- cannot be changed by the usr -->
    </HBox>

    <HBox fx:id="topPart">
        <HBox fx:id="timelineName">
            <TextField fx:id="timeline_name" text="Name Timeline"/> <!-- timeline name can be changed by the user -->
        </HBox>

        <!-- Save button HBox -->
        <HBox fx:id="saveButton">
            <Button fx:id="save_button"
                    text="Save"/> <!-- save button not sure what its for just copyiing the mfd -->
        </HBox>

    </HBox>


        <!-- MIDDLE PART -->
        <!-- Add a time button -->
<!--        <HBox fx:id="addTime">-->
<!--            <Button fx:id="add_time_button" text="Add a time"/> &lt;!&ndash; save button not sure what its for yet &ndash;&gt;-->
<!--        </HBox>-->


        <!-- timeslots -->
        <HBox fx:id="timeline_main" spacing="10.0" AnchorPane.rightAnchor="0.0">
            <HBox spacing="10.0" AnchorPane.rightAnchor="0.0" maxWidth="90">
                <Button fx:id="timeslot_1" text="Timeslot 1"/>
            </HBox>

            <HBox spacing="10.0" maxWidth="90">
                <Button fx:id="timeslot_2" text=" Timeslot 2"/>
            </HBox>

            <HBox spacing="10.0" maxWidth="90">
                <Button fx:id="timeslot_3" text=" Timeslot 3"/>
            </HBox>

            <HBox spacing="10.0" maxWidth="90">
                <Button fx:id="timeslot_4" text=" Timeslot 4"/>
            </HBox>

            <HBox spacing="10.0" maxWidth="90">
                <Button fx:id="timeslot_5" text=" Timeslot 5"/>
            </HBox>

        </HBox>
        <!-- End timeslots -->

        <!-- BOTTOM PART -->
        <!-- Night Mode start and end time titles -->
    <HBox fx:id="bottomSection">
        <VBox fx:id="bottom1">
            <HBox fx:id="timeTitles">
                <TextField fx:id="NM_start_title" text="Start Time (24hr)" editable="false"/>
                <TextField fx:id="NM_end_title" text="End Time (24hr)" editable="false"/>
            </HBox>

            <!-- Night mode start time -->
            <HBox fx:id="enterTime">
                <TextField fx:id="NM_start" text="Enter Time" style="-fx-alignment: center;"
                           prefWidth="120"/>
                <TextField fx:id="NM_end" text="Enter Time" style="-fx-alignment: center;"
                           prefWidth="120"/>
            </HBox>

            <!-- Night Mode button -->
            <HBox fx:id="nightButton">
                <Button fx:id="NM_button" text="Night Mode"/> <!-- -->
            </HBox>
        </VBox>
        <VBox fx:id="bottom2">
            <!-- Brightness Level title -->
            <HBox fx:id="brightnessTitle">
                <TextField fx:id="BL_title" text="Brightness Level" editable="false"
                           style="-fx-alignment: center;"/>
            </HBox>

            <!-- Brightness Level slider -->
            <HBox fx:id="brightnessSlider">
                <Slider fx:id="brightness_slider" prefWidth="200" majorTickUnit="10"
                        showTickMarks="true" showTickLabels="true"/>
            </HBox>


        </VBox>
    </HBox>

<!--    <HBox>-->
<!--        <Button fx:id="testButton" text="Test Brightness" onAction="#testBrightness"/>-->
<!--    </HBox>-->
</VBox>

